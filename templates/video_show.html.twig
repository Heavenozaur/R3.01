{% extends "base.html.twig" %}

{% block title %}{{ video.title }}{% endblock %}

{% block content %}
    <article class="container">
        <div class="row">
            <div class="col s12 m12 l8 offset-l2">
                <h1>{{ video.title }}</h1>
                <embed src="{{ asset('uploads/videos/' ~ video.video) }}" autostart="false" height="300" width="300" /></embed>
            </div>
        </div>
        <div class="row">
            <div class="col s12 m12 l8 offset-l2">
                <p>
                    {{ video.content }}
                </p>
            </div>
    </article>
{% endblock %}

                        
