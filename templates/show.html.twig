{% extends "base.html.twig" %}

{% block title %}{{ article.title }}{% endblock %}

{% block content %}
    <article class="container">
        <div class="row">
            <div class="col s12 m12 l8 offset-l2">
                <h1>{{ article.title }}</h1>
                    <img src="{{ asset('uploads/' ~ article.picture) }}" class="responsive-img">
            </div>
        </div>
        <div class="row">
            <div class="col s12 m12 l8 offset-l2">
                <p>
                    {{ article.content }}
                </p>
            </div>
    </article>
{% endblock %}